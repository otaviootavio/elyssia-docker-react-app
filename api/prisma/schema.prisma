generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model rooms {
  uuid        String   @id @unique @default(uuid())
  createdAt   DateTime @default(now())
  users       users[]
  totalSlices Int
}

model users {
  uuid        String   @id @unique @default(uuid())
  createdAt   DateTime @default(now())
  name        String
  roomsUuid   String?
  rooms       rooms?   @relation(fields: [roomsUuid], references: [uuid])
  slicesEaten Int      @default(0)

  @@index([roomsUuid])
}
